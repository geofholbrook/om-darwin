(in-package ccl)(defmethod ed-plain ((w fred-mixin))  (ed-set-view-font w '(9 :plain)))(defmethod ed-bold ((w fred-mixin))  (ed-set-view-font w '(:bold)))(defmethod ed-geof-edit ((w fred-mixin))  (ed-bold w)  (ed-set-view-font w '((:color-index 176))));color thing was a real pain to figure out!!(defmethod ed-original ((w fred-mixin))  (ed-plain w)  (ed-set-view-font w '((:color-index 0))))(defmethod ed-comment ((w fred-mixin))  (ed-bold w)  (ed-set-view-font w '((:color-index 162))))(defmethod ed-monaco ((w fred-mixin))  (ed-set-view-font w '("monaco" 9)))(defmethod ed-heading ((w fred-mixin))  (ed-bold w)  (ed-set-view-font w '(12)))                                     (comtab-set-key *comtab* '(:shift :control #\X) 'ed-geof-edit)(comtab-set-key *comtab* '(:shift :control #\O) 'ed-original)(comtab-set-key *comtab* '(:shift :control #\Z) 'ed-comment)(comtab-set-key *comtab* '(:shift :control #\B) 'ed-bold)(comtab-set-key *comtab* '(:shift :control #\F) 'ed-heading)(comtab-set-key *comtab* '(:shift :control #\P) 'ed-plain)